using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Tutorial_L_TutorialManager : MonoBehaviour {
    [SerializeField]
    private GameObject arrow;
    [SerializeField]
    private GameObject goalLine;
    [SerializeField]
    private GameObject lever;
    private float dt;
    bool isCollidedWithLever;
    Collider checkLeverCollider;
    // Use this for initialization
    void Start ()
    {
        dt = 0;
        isCollidedWithLever = false;
        checkLeverCollider = lever.GetComponent<Collider>();
    }
	
	// Update is called once per frame
	void Update ()
    {
        dt += Time.deltaTime;

        if (isCollidedWithLever == false)
            arrow.transform.position = new Vector3(arrow.transform.position.x, (Mathf.Sin(dt * 4) * 0.5f + 2), arrow.transform.position.z);
        else
            arrow.transform.position = new Vector3(goalLine.transform.position.x, (Mathf.Sin(dt * 4) * 0.5f + 2), goalLine.transform.position.z);
    }

    private void OnTriggerEnter(Collider other)
    {
        if (other == checkLeverCollider)
        {
            isCollidedWithLever = true;
        }
    }
}

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Instruction_Point : MonoBehaviour {

    float speed = 20.0f;
    float maxValue = 10.0f;
    float minValue = 0;
    float currValue = 0;
    private Vector3 startPos;

	// Use this for initialization
	void Start ()
    {
        startPos = GetComponent<RectTransform>().position;
	}

    // Update is called once per frame
    void Update()
    {
        currValue += Time.deltaTime * speed; // or however you are incrementing the position
        if (currValue >= maxValue)
        {
            speed *= -1;
            currValue = maxValue;
        }
        else if (currValue <= minValue)
        {
            speed *= -1;
            currValue = minValue;
        }
        GetComponent<RectTransform>().position = new Vector3(startPos.x + currValue, startPos.y, startPos.z);
    }
}

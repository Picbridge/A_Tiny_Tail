    void Start()
    {
        level = new Level[levelSize];

        for (int i = 0; i < levelSize; i++)
            level[i] = new Level(i);

        level[0].levelName = "H_Tutorial.txt";
        level[1].levelName = "H_Lv1.txt";
        level[2].levelName = "H_Lv2.txt";
        level[3].levelName = "C_Tutorial.txt";
        level[4].levelName = "C_Lv2.txt";
        level[5].levelName = "L_Tutorial.txt";
        level[6].levelName = "L_Lv1.txt";
        level[7].levelName = "L_Lv2.txt";
        level[8].levelName = "M_Lv1.txt";
        level[9].levelName = "M_Lv2.txt";
        level[10].levelName = "M_Lv3.txt";


        tilePortion = 1.0f;

        for (int i = 0; i < levelSize; i++)
        {
            fileReader.ReadLevel(level[i]);
        }
    }

